.root {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

.header {
    display: flex;
    justify-content: space-between;
}

@media (min-width: 768px) {
    .header {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
    }

    :global(html.fullscreen) .header {
        top: 64px;
    }
}

.main {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 40px;
}

.h2 {
    font-size: 80px;
    font-weight: 500;
    line-height: 2em;
    text-align: center;
}

.h3 {
    font-size: 64px;
    line-height: 1.5em;
    text-align: center;
}

.footer {
    text-align: center;
}
